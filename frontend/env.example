# WalletConnect Project ID (required for wallet connection)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# App Configuration
NEXT_PUBLIC_APP_NAME=UniKYC
NEXT_PUBLIC_APP_URL=https://unikyc.io
NEXT_PUBLIC_APP_DESCRIPTION=Decentralized Identity Verification

# Redis Configuration (optional, for production)
REDIS_URL=redis://localhost:6379

# Blockchain Network Configuration
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-rpc.com
NEXT_PUBLIC_FILECOIN_CALIBRATION_RPC_URL=https://api.calibration.node.glif.io/rpc/v1

# Contract Addresses (deploy and update these)
NEXT_PUBLIC_BLOCKLOCK_CONTRACT_ADDRESS=0x...
NEXT_PUBLIC_RANDOMNESS_CONTRACT_ADDRESS=0x...

# Storage Configuration (Storacha/IPFS)
# Note: Storacha uses email-based authentication, no API key needed
# Just provide an email for space provisioning
STORACHA_DEFAULT_EMAIL=your_email@example.com

# Optional: Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
